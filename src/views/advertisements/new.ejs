<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <h1>New Advertisement</h1>
      <form action="/advertisements/create" method="post">
        <div class="form-group">
          <label for="title">Advertisement Title</label>
          <input type="text" class="form-control" name="title" aria-describeby="tittleHelp" placeholder="Enter your ad title here">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea rows="4" class="form-control" name="description" placeholder="Enter your ad description here"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create my ad</button>
      </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
