<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>
    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>Sign up</h1>
      <form action="/users" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="text" class="form-control" name="email" aria-describedby="emailHelp" palceholder="Enter email">
          <small class="text-muted" id="emailHeklp">email address must be a valid address</small>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" palceholder="Enter password">
          <small class="text-muted" id="emailHeklp">password must match confirmation below</small>
        </div>
        <div class="form-group">
          <label for="passwordConfirmation">Password confirmation</label>
          <input type="password" class="form-control" name="passwordConfirmation" aria-describedby="passwordHelp" palceholder="Enter password confirmation">
        </div>
        <button type="submit" class="btn btn-primary">Sign up</button>
      </form>
    </main>
    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
